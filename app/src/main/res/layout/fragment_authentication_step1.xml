<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.example.wayhome.ui.authentication.signup.SignupViewModel" />
    </data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main_activity"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.authentication.signup.AuthenticationStep1Fragment">

<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/text_group"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:gravity="center_horizontal"
    android:layout_above="@id/button_group"
    android:orientation="vertical">


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        style="@style/My.Headline5"
        android:gravity="center"
        android:text="Регистрация"
        />

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        style="@style/My.Body2"
        android:text="@string/layout_1_2_send_code_text"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextField"
        android:layout_width="match_parent"
        android:layout_marginTop="28dp"
        android:layout_height="wrap_content"
        android:hint="Почта"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mail_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextField2"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:hint="Пароль"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        style="@style/My.Body2"
        android:gravity="center"
        android:paddingHorizontal="4dp"
        android:text="@string/condition_next_text"

        />


</LinearLayout>

<LinearLayout
    android:id="@+id/button_group"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_alignParentBottom="true"
    android:paddingBottom="12dp"
    android:paddingHorizontal="16dp">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_button"
        style="@style/Theme.MyMy.RegisterButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Зарегистрироваться" />


</LinearLayout>



</RelativeLayout>
</layout>